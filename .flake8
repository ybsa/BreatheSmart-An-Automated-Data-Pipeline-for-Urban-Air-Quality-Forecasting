[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .mypy_cache

per-file-ignores =
    __init__.py: F401
    tests/*: S101, D103

# Docstring style
docstring-convention = google

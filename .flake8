[flake8]
max-line-length = 120
extend-ignore =
    E203,
    W503,
    E501,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107,
    D205,
    D212,
    D400,
    D415
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .mypy_cache

per-file-ignores =
    __init__.py: F401
    tests/*: S101, D103
